	},
	{
		name: "CSS",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/css3/css3-original.svg",
	},
	{
		name: "JavaScript",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg",
	},
	{
		name: "PHP",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/php/php-original.svg",
	},
	{
		name: "MySQL",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mysql/mysql-original-wordmark.svg",
	},
	{
		name: "React",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/react/react-original-wordmark.svg",
	},
	{
		name: "Next JS",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nextjs/nextjs-original.svg",
	},
	{
		name: "Astro",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg",
	},
	{
		name: "Yii",
		logo: "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/yii/yii-original.svg",
	},
	// {
	// 	name: "CSS",
	// 	logo: "",
	// },
	// {
	// 	name: "CSS",
	// 	logo: "",
	// },
];

const skillsCount = skills.length;
const animationDuration = "30s";
---

<style lang="scss" define:vars={{ animationDuration }}>
	.col-2 {
		display: grid;
		grid-template-columns: 3fr 1fr;
		column-gap: 1rem;
	}

	#hero-content {
		display: block;
		width: 100%;
		padding: 32px 0;
	}

	.hero--title {
		font-size: var(--step-3);
		color: var(--secondary);
	}

	.hero--subtitle {
		font-style: italic;
		font-size: var(--step-0);

		#animatedWords {
			color: var(--primary);
			transition: opacity 0.5s ease-in-out;
		}

		#animatedWords.fade {
			opacity: 0;
		}
	}

	.hero--skills {
		margin: var(--step-6) 0;

		.hero--skills-title {
			color: var(--secondary);
			font-size: var(--step-2);
			margin-bottom: 1rem;
		}

		.skills-wrapper {
			width: 100%;
			position: relative;
			height: var(--step-2);
			overflow: hidden;
			mask-image: linear-gradient(
				to right,
				hsl(0 0% 0% / 0),
				hsl(0 0% 0% / 1) 20%,
				hsl(0 0% 0% / 1) 80%,
				hsl(0 0% 0% / 0)
			);

			.skills {
				height: var(--step-2);
				position: absolute;
				left: 100%;
				animation-name: scrollLeft;
				animation-duration: var(--animationDuration);
				animation-timing-function: linear;
				animation-iteration-count: infinite;
			}
		}
	}

	@keyframes scrollLeft {
		to {
			left: calc(-1 * var(--step-2));
		}
	}
</style>

<div id="hero-content">
	<div class="col-2">
		<div class="hero-greetings">
			<h1 class="hero--title">hi! i'm reneüçÄ</h1>
			<p class="hero--subtitle">web application developer</p>
			<p class="herro--about">
				this is my about section where i tell you by passion for creating very
				simple application with minimalistic design. i will also tell you that
				my programming starts with curiousity. additionally, i am also a little
				bit of a designer who focuses on a simple design yet an effective user
				experience.
			</p>
		</div>
		<div class="hero-image">
			<Image
				src={computerImage}
				alt="Computer on top of desk with plants around it"
				style={`width: 100%; height: 100%`}
				loading={"lazy"}
			/>
		</div>
	</div>

	<div class="hero--skills">
		<h2 class="hero--skills-title">Skills</h2>
		<div class="skills-wrapper">
			{
				skills.map((skill, index) => (
					<>
						<img
							class="skills"
							src={skill.logo}
							title={skill.name}
							style={`
                                animation-delay: calc(${animationDuration} / ${skillsCount} * (${skillsCount} - ${index}) * -1)
                            `}
						/>
					</>
				))
			}
		</div>
	</div>
</div>
